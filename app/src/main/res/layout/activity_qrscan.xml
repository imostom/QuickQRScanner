<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/more_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_add"
        android:contentDescription="Submit"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"
        style="@style/ThemeFab"
        android:layout_margin="16dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:fabSize="normal"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/more_fab"
        app:layout_constraintEnd_toEndOf="@+id/more_fab"
        app:layout_constraintStart_toStartOf="@+id/more_fab"
        style="@style/ThemeFab"
        app:tint="@color/white"
        app:srcCompat="@drawable/gallery_100" />

    <TextView
        android:id="@+id/fab_gallery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Open Gallery"
        app:layout_constraintBottom_toBottomOf="@+id/fab_gallery"
        app:layout_constraintEnd_toStartOf="@+id/fab_gallery"
        app:layout_constraintTop_toTopOf="@+id/fab_gallery" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:fabSize="normal"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/fab_gallery"
        app:layout_constraintEnd_toEndOf="@+id/fab_gallery"
        app:layout_constraintStart_toStartOf="@+id/fab_gallery"
        style="@style/ThemeFab"
        app:tint="@color/white"
        app:srcCompat="@drawable/back_100" />

    <!--Action name text for the add person button-->
    <!--Make sure that you are constraining this Text
        to the add Person FAB button-->
    <TextView
        android:id="@+id/fab_share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Share"
        app:layout_constraintBottom_toBottomOf="@+id/fab_share"
        app:layout_constraintEnd_toStartOf="@+id/fab_share"
        app:layout_constraintTop_toTopOf="@+id/fab_share" />

